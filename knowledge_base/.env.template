# Environment Configuration Template

# Copy this file to .env and fill in your values
# NEVER commit .env files to version control

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# PostgreSQL connection details
DB_USER=knowledge_base_user
DB_PASSWORD=your_secure_password_here
DB_HOST=localhost
DB_PORT=5432
DB_NAME=knowledge_base

# =============================================================================
# LLM CONFIGURATION
# =============================================================================

# Google AI API Key (required for embeddings and text generation)
GOOGLE_API_KEY=your_google_api_key_here

# LLM Model Configuration
LLM_PROVIDER=google
LLM_MODEL=gemini-2.5-flash
OPENAI_API_BASE=

# Advanced LLM Settings
LLM_MAX_RETRIES=3
LLM_TIMEOUT=120

# =============================================================================
# API SERVER CONFIGURATION
# =============================================================================

# Server binding
API_HOST=0.0.0.0
API_PORT=8000

# Development settings
API_RELOAD=false

# CORS configuration (comma-separated URLs)
CORS_ORIGINS=http://localhost:3000,http://localhost:8501

# =============================================================================
# STREAMLIT UI CONFIGURATION
# =============================================================================

# API endpoints for the UI
STREAMLIT_API_URL=http://localhost:8000
STREAMLIT_WS_URL=ws://localhost:8000/ws

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================

# Logging level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Log format
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# =============================================================================
# OPTIONAL: ADVANCED CONFIGURATION
# =============================================================================

# Redis configuration (for future caching/session management)
# REDIS_URL=redis://localhost:6379

# Monitoring and metrics
# METRICS_ENABLED=true
# METRICS_PORT=9090

# Rate limiting
# RATE_LIMIT_REQUESTS_PER_MINUTE=60

# File upload settings
# MAX_UPLOAD_SIZE_MB=10
# ALLOWED_FILE_TYPES=txt,md,pdf

# =============================================================================
# SECURITY SETTINGS (PRODUCTION ONLY)
# =============================================================================

# JWT Secret (generate a secure random string)
# JWT_SECRET=your_jwt_secret_here

# Session settings
# SESSION_TIMEOUT_MINUTES=60

# SSL/TLS settings
# SSL_CERT_PATH=/path/to/ssl/cert.pem
# SSL_KEY_PATH=/path/to/ssl/private.key

# =============================================================================
# BACKUP CONFIGURATION
# =============================================================================

# Backup settings
# BACKUP_ENABLED=true
# BACKUP_SCHEDULE=daily
# BACKUP_RETENTION_DAYS=30
# BACKUP_PATH=/var/backups/knowledge_base

# =============================================================================
# MONITORING AND ALERTS
# =============================================================================

# Health check settings
# HEALTH_CHECK_INTERVAL_SECONDS=30

# Alert thresholds
# ALERT_HIGH_CPU_USAGE=90
# ALERT_HIGH_MEMORY_USAGE=90
# ALERT_LOW_DISK_SPACE_GB=5

# Notification settings (email, slack, etc.)
# ALERT_EMAIL_TO=admin@example.com
# SLACK_WEBHOOK_URL=https://hooks.slack.com/services/...

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# Debug mode (never enable in production)
DEBUG=false

# Enable development tools
DEV_TOOLS_ENABLED=false

# Mock data for testing (never enable in production)
USE_MOCK_DATA=false